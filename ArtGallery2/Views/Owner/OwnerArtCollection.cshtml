@model List<ArtGallery2.ViewModel.ArtViewModel >
@{
    ViewBag.Title = "ArtWork";
}

@*@Html.ActionLink("Add Artist", "CreateArtist")
@Html.ActionLink("Add ArtWork", "CreateArtWork")
@Html.ActionLink("Add Art Piece", "CreateIndividualPiece")*@


<h4>Art Work Available</h4>
@Html.ActionLink("View Sold Pieces", "SoldWork", new { Location = "South" })
<hr />
@foreach (var item in Model)
{
    <div class="row">
        @*<a href="@Url.Action("SoldWork", "Owner", new { Location = item.Location})">
            View Sold Pieces
        </a>*@
        <div class="col-md-2">
            @Html.DisplayNameFor(modelItem => item.Image)
        </div>
        <div class="col-md-2">
            @Html.DisplayNameFor(modelItem => item.Title)
        </div>
        <div class="col-md-2">
            @Html.DisplayNameFor(modelItem => item.Price)
        </div>
        <div class="col-md-2">
            @Html.DisplayNameFor(modelItem => item.Cost)
        </div>
        <div class="col-md-2">
            @Html.DisplayNameFor(modelItem => item.Edition)
        </div>
    </div>

    <div class="row">
           <div class="col-md-2">
                <img src="@Html.DisplayFor(modelItem => item.Image)" alt="Alternate Text" class="thumbnail" />
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(modelItem => item.Title)
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(modelItem => item.Price)
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(modelItem => item.Cost)
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(modelItem => item.Edition)
            </div>
        <div>
            @Html.ActionLink("Edit", "EditIp", new { id = item.IndividualPieceId })    
            @Html.ActionLink("Delete", "DeleteIp", new { id = item.IndividualPieceId })
        </div>
        </div>

        <hr />
}
